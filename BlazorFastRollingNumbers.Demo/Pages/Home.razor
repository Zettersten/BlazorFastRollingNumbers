@page "/"
@using BlazorFastRollingNumbers

<PageTitle>Blazor Fast Rolling Numbers - Demo & Documentation</PageTitle>

<div class="page">
    <header>
        <div class="badge">v1.0</div>
        <h1>Blazor Fast Rolling Numbers</h1>
        <p>High-performance animated counter component for Blazor. AOT-ready, trimming-safe, and CSS-powered.</p>
